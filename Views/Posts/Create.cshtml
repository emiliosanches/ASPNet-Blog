@{
    ViewData["Title"] = "Criar publicação";
}

@section scripts {
    <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
}

@section styles {
    <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css" >
}

@model PostModel

<div class="container">
    <h3>Create post</h3>

    @using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { @class = "postForm", @autocomplete = "off" }))
    {
        <div class="inputContainer">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="inputContainer">
            <label asp-for="HeaderImageUrl">Header Image URL</label>
            <input asp-for="HeaderImageUrl" />
            @Html.ValidationMessageFor(model => model.HeaderImageUrl)
        </div>
        <div class="inputContainer fillFlex">
            <label asp-for="Body">
                Post body (markdown/html)
                @Html.ValidationMessageFor(model => model.Body)
            </label>
            <textarea asp-for="Body"></textarea>
        </div>

        <button type="submit" class="submitButton">Publicar</button>
    }

    <script>
        const easyMDE = new EasyMDE();
    </script>
</div>


